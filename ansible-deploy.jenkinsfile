pipeline {
    agent any
    parameters {
        choice(name: 'Hosts', choices: 'dev\nqa\nstaging\nprod\ndata\ndata-dev\nsys')
        choice(name: 'Playbook', choices: 'update_users\ndeploy_grails\ndeploy_monitoring')
        string(name: 'Tags', description: 'Tags to add Separated by commas')
    }
    environment {
        creds = credentials('ROOT')
    }
    options {
        timeout(time:10)
    }
    stages {
        stage('Initialize'){
            steps {
                deleteDir()
                buildName "${Playbook}-${Hosts}-${BUILD_ID}"
                buildDescription "Run ${Playbook} on ${Hosts} with Tags:${Tags}"
            }
        }
        stage('Retrieve Code'){
            steps {
                git (
                    branch: 'master',
                    credentialsId: 'Main',
                    url: 'git@github.com:TodayTix/config.git'
                )
            }
        }
        stage('Run Playbook'){
            steps {
                load "$JENKINS_HOME/.envars/prod"
                dir('ansible'){
                    script {
                        if (Tags==''){
                            sh "ansible-playbook ${Playbook}.yml --key-file ${creds} -u ${creds_USR} -i hosts/${Hosts}"
                        }
                        else {
                            sh "ansible-playbook ${Playbook}.yml --key-file ${creds} -u ${creds_USR} -i hosts/${Hosts} -t ${Tags}"
                        }
                    }
                }
            }
        }
    }
}
